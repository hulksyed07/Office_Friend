<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Pool</th>
      <th>Location</th>
      <th>Contact</th>
      <th>About me</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% unless @profiles.blank? %>
        <% @profiles.each do |profile|%>
          <tr>
            <td><%= profile.first_name %></td>
            <td><%= profile.last_name %></td>
            <td><%= profile.pool %></td>
            <td><%= profile.location %></td>
            <td><%= profile.contact %></td>
            <td><%= profile.about_me %></td>
            <td><%= link_to 'Show', @profiles %></td>
            <td><%#= link_to 'Edit', edit_profile_path(@profiles) %></td>
            <td><%#= link_to 'Destroy', @profiles, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
  </tbody>
</table>

<br>

